{% set page_name = 'Практичні роботи' %}
{% set base_path = '../' %}
{% set nav_active = '/pracs' %}
{% extends "layouts/base.njk" %}

{% block styles %}
  <style>
    .pracs {
      list-style: none;
      padding: 0;
      display: flex;
      /* flex-direction: column; */
      flex-wrap: wrap;
      gap: 1rem;
    }

    .pracs li {
      flex: 1 1 300px;
      display: flex;
      overflow: hidden;
    }

    .pracs li a {
      border: 1px solid var(--text-color);
      border-radius: 6px;
      flex: 1 1 auto;
      display: block;
      padding: 1rem;
      text-decoration: none;
      color: var(--color-text);
      font-size: 18px;
      font-weight: 400;
      word-wrap: nowrap;
      white-space: nowrap;
      text-overflow: ellipsis;
      overflow: hidden;

      /* transition: color 0.2s ease-in-out; */
    }

    .pracs a:not([disabled]):active,
    .pracs a:not([disabled]):focus-visible {
      background: #000;
      color: #fff;
    }

    @media screen and (min-width: 600px) {
      .pracs a:not([disabled]):hover {
        background: #000;
        color: #fff;
      }
    }

    .pracs li[disabled] {
      opacity: 0.2;
      cursor: not-allowed;
    }

    .pracs li[disabled] a {
      pointer-events: none;
    }
  </style>
{% endblock %}

{% block content %}
  <section>
    <div class="container">
      <div class="section-header">
        <h1 class="section-title">Практичні роботи</h1>
      </div>

      <div class="section-body">
        <ul class="pracs">
          <li>
            <a href="p1">Практична 1</a>
          </li>
          <li>
            <a href="../labs/l1">Практична 2</a>
          </li>
          <li disabled>
            <a href="p3">Практична 3</a>
          </li>
          <li disabled>
            <a href="p4">Практична 4</a>
          </li>
          <li disabled>
            <a href="p5">Практична 5</a>
          </li>
        </ul>
      </div>
    </div>
  </section>
{% endblock %}

{% block scripts %}
  <script>
    (function () {
      const disabledPracs = document.querySelectorAll('.pracs li[disabled] a');
      disabledPracs.forEach((prac) => {
        prac.setAttribute('tabindex', '-1');
      });
    })();
  </script>
{% endblock %}