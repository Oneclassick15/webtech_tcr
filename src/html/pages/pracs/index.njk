{% block js %}
  <script>
    (function () {
      const disabledPracs = document.querySelectorAll('.works li[disabled] a');
      disabledPracs.forEach((prac) => {
        prac.setAttribute('tabindex', '-1');
      });
    })();
  </script>
{% endblock %}