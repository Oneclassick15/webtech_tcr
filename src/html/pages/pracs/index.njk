{% from 'components/_section.njk' import section %}

{% extends "layouts/main.njk" %}

{% set page_name = 'Практичні роботи' %}
{% set base_path = '..' %}
{% set nav_active = '/pracs' %}

{% block content %}

  {% call section('Практичні роботи') %}
