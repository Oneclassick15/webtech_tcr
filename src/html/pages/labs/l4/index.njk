          <div><input type="checkbox" ><input type="text" ></div>
          <div><input type="checkbox" ><input type="text" ></div>
          <div><input type="checkbox" ><input type="text" ></div>
          <div><input type="checkbox" ><input type="text" ></div>
          <div><input type="checkbox" ><input type="text" ></div>
          <div><input type="checkbox" ><input type="text" ></div>
          <div><input type="checkbox" ><input type="text" ></div>
          <div><input type="checkbox" ><input type="text" ></div>

        </div>

        <div class="todo-group">
          <div class="todo-title">Next week</div>

          <div><input type="checkbox" ><input type="text" ></div>
          <div><input type="checkbox" ><input type="text" ></div>
          <div><input type="checkbox" ><input type="text" ></div>
          <div><input type="checkbox" ><input type="text" ></div>

        </div>
      </div>
      <div class="paper">
        <div class="day">
          Monday

          <input type="checkbox" >
        </div>
      </div>
      <div class="paper">
        <div class="day">
          Tuesday

          <input type="checkbox" >
        </div>
      </div>
      <div class="paper">
        <div class="day">
          Wednesday

          <input type="checkbox" >
        </div>
      </div>
      <div class="paper">
        <div class="day">
          Thursday

          <input type="checkbox" >
        </div>
      </div>
      <div class="paper">
        <div class="day">
          Friday

          <input type="checkbox" >
        </div>
      </div>
      <div class="paper">
        <div class="day">
          Saturday

          <input type="checkbox" >
        </div>
      </div>
      <div class="paper">
        <div class="day">
          Sunday

          <input type="checkbox" >
        </div>
      </div>
    </div>
  </section>

{% endblock %}